@model Realert.Models.EditNewPropertyAlertViewModel

@{
}

<h1 class="mb-6 text-3xl font-extrabold text-gray-900">Manage Your New Property Alert</h1>
<div class="flex items-center mb-4">
    <h2 class="text-2xl font-bold leading-none text-gray-900">@Model.NotificationName</h2>
    <div class="w-fit h-fit ml-4 text-white 0 font-medium rounded-lg text-sm text-center py-1.5 px-3 @Model.TargetSiteColorClass">@Html.DisplayFor(model => model.TargetSite)</div>
</div>
<div class="grid grid-cols-[200px_1fr] gap-x-6">
    <image src="/assets/house.png" alt="house" />
    <section>
        <div class="flex items-center mb-5">
            <span class="inline-flex items-center text-sm text-gray-900 dark:text-gray-400">
                <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
            </span>
            <h3 class="mx-2 text-sm font-medium leading-none text-gray-900">
                Setup on:
                <span class="">
                    @Html.DisplayFor(model => model.CreatedAt)
                </span>
            </h3>
        </div>
        <dl>
            <dt class="mb-2 font-semibold leading-none text-gray-900">Search Criteria</dt>
            <dd class="mb-4 font-light text-gray-500">All 
                <span class="font-normal text-blue-600">@Model.FormattedPropertyType</span> in
                <span class="font-normal text-blue-600">@Model.Location</span> within a
                <span class="font-normal text-blue-600">@Model.SearchRadius</span> mile radius.
            </dd>
        </dl>
        <dl class="flex items-center space-x-8">
            <div>
                <dt class="mb-2 font-semibold leading-none text-gray-900">Min. Price</dt>
                <dd class="mb-4 font-light text-gray-500">£@Model.MinPrice</dd>
            </div>
            <div>
                <dt class="mb-2 font-semibold leading-none text-gray-900">Max. Price</dt>
                <dd class="mb-4 font-light text-gray-500">£@Model.MaxPrice</dd>
            </div>
        </dl>
        <dl class="flex items-center space-x-8">
            <div>
                <dt class="mb-2 font-semibold leading-none text-gray-900">Min. Beds</dt>
                <dd class="mb-4 font-light text-gray-500">@Model.MinBeds</dd>
            </div>
            <div>
                <dt class="mb-2 font-semibold leading-none text-gray-900">Max. Beds</dt>
                <dd class="mb-4 font-light text-gray-500">@Model.MaxBeds</dd>
            </div>
        </dl>
        <form asp-controller="NewPropertyAlertNotification" asp-action="Delete">
            <input asp-for="DeleteCode" id="delete-code" type="text" class="hidden" aria-hidden="true" readonly>
            <button type="button" class="text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                <svg aria-hidden="true" class="mr-1 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
                Edit
            </button>
            <button type="submit" value="Delete" class="ml-2 inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                <svg aria-hidden="true" class="w-5 h-5 mr-1.5 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
                Unsubscribe
            </button>
            <span asp-validation-for="DeleteCode" class="block mt-3 text-red-500 text-sm font-medium"></span>
        </form>
    </section>
</div>
<script src="~/js/NewPropertyAlertNotification/EditNewPropertyAlert.js" asp-append-version="true"></script>
