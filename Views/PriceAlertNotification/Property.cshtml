@model Realert.Models.EditPriceAlertViewModel

@{
}

<div>
    <h1 class="mb-6 text-3xl font-extrabold text-gray-900">Property Details - Price Change</h1>
    <h2 class="mb-4 text-base text-gray-900">Theres been a change in price to a property you've set alerts up for.</h2>
    <div class="flex items-center mb-6">
        <h2 class="text-2xl font-bold leading-none text-blue-600 hover:underline">
            <a href="@Model.ListingLink" target="_blank">
                @Model.Property!.PropertyName
            </a>
        </h2>
        <div class="w-fit h-fit ml-4 text-white 0 font-medium rounded-lg text-sm text-center py-1.5 px-3 @Model.TargetSiteColorClass">
            @Html.DisplayFor(model => model.TargetSite)
        </div>
    </div>
    <div class="grid grid-cols-[250px_1fr] gap-x-6">
        <image src="/assets/house.png" alt="house" />
        <div>
            <div class="flex items-center mb-5">
                <span class="inline-flex items-center text-sm text-gray-900 dark:text-gray-400">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                </span>
                <h3 class="mx-2 text-sm font-medium leading-none text-gray-900">
                    Last Price Change: 
                    <span class="">
                        @Html.DisplayFor(model => model.Property!.LastPriceChangeDate)
                    </span>
                </h3>
            </div>
            <div class="flex items-center space-x-4 mb-5">
                <dl>
                    <dt class="mb-2 font-semibold leading-none text-gray-900">Original Price</dt>
                    <dd class="font-light text-gray-500">£@Model.Property.FirstScannedPrice</dd>
                </dl>
                @if (@Model.IsPriceDecrease != null && @Model.IsPriceDecrease == true)
                {
                    <image src="/assets/down-arrow.png" alt="house" />
                } 
                else
                {
                    <image src="/assets/up-arrow.png" alt="house" />
                }
                <dl>
                    <dt class="mb-2 font-semibold leading-none text-gray-900">Current Price</dt>
                    <dd class="font-light text-gray-500">£@Model.Property.LastScannedPrice</dd>
                </dl>
            </div>
            <dl>
                <dt class="mb-2 font-semibold leading-none text-gray-900">No. of Price Changes</dt>
                <dd class="font-light text-gray-500">@Model.Property.NumberOfPriceChanges</dd>
            </dl>
        </div>
    </div>
</div>
